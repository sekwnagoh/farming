
<div class="container">
<h2>Post Preview</h2>
	<div class="row">
	<div class="col-sm-6">
		<%= image_tag(@product.picture, size: "400x400")  %>
	</div>
	<div class="col-sm-6">
		<h2><%= @product.name %></h2>
		<p><%= @product.summary %></p>
	</div>
</div>

<p>
  <strong>Description:</strong>
  		<%= @product.description.html_safe %>
</p>
	<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-default' %>
	<%= link_to 'Back', products_path, class: 'btn btn-default' %>

</div>